# BESU ENTERPRISE CONFIGURATION - PRIVATE NETWORK
# ═══════════════════════════════════════════════════════════════════════════════
# Generated by kaiminus - Production Ready Enterprise Configuration
# Network: %s (Chain ID: %d)
# Node: %d
# Validator Address: %s

# Network Configuration
genesis-file="%s"
data-path="%s"
node-private-key-file="%s"
identity="%s"

# SYNCHRONIZATION - Optimized for Private Networks
sync-mode="FULL"

# Storage - Production Performance
data-storage-format="BONSAI"
key-value-storage="rocksdb"
cache-last-blocks=1000
bonsai-historical-block-limit=1000
receipt-compaction-enabled=true

# P2P Network - Kubernetes Ready
p2p-enabled=true
p2p-host="%s"
p2p-port=%d
max-peers=20
discovery-enabled=false
nat-method="NONE"  # NONE is correct for Kubernetes (K8s handles NAT)

# Mining/Consensus QBFT
miner-enabled=true
miner-coinbase="%s"
min-gas-price=%s
target-gas-limit=%d

# JSON-RPC API - Kubernetes Configuration
rpc-http-enabled=true
rpc-http-host="0.0.0.0"
rpc-http-port=%d
rpc-http-api=["ETH","WEB3","NET","QBFT","ADMIN"]
host-allowlist=["*"]  # Allow K8s services; restrict via NetworkPolicy if needed

# WebSocket JSON-RPC - Real-time Monitoring
rpc-ws-enabled=true
rpc-ws-host="0.0.0.0"
rpc-ws-port=%d
rpc-ws-api=["ETH","WEB3","NET","QBFT","ADMIN"]


# Engine API - Disabled for QBFT Private Networks
engine-rpc-enabled=false  # Not needed for private QBFT

# Transaction Pool - Modern Configuration
tx-pool="layered"
tx-pool-layer-max-capacity=25000000
tx-pool-max-prioritized=4000
tx-pool-max-future-by-sender=200
strict-tx-replay-protection-enabled=true

# Metrics - Enterprise Monitoring
metrics-enabled=true
metrics-host="0.0.0.0"
metrics-port=%d
metrics-category=["BLOCKCHAIN","PEERS","PROCESS","NETWORK","SYNCHRONIZER","TRANSACTION_POOL","RPC","KVSTORE_ROCKSDB","KVSTORE_ROCKSDB_STATS","EXECUTORS","BLOCK_PROCESSING","PERMISSIONING"]

# Logging - Production Ready
logging="INFO"
color-enabled=false

# Local Permissions - Node Access Control
permissions-nodes-config-file-enabled=true
permissions-nodes-config-file="%s/permissions_config.toml"
permissions-accounts-config-file-enabled=false
static-nodes-file="%s/static-nodes.json"